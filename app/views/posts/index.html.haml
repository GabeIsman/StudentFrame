= render :partial => "shared/cms_header", :locals => { :name => "Posts" }

%table
  %tr
    %th Title
    %th Blog
    %th Link
    %th Is Original?
    %th
    %th
    %th

  - @posts.each do |post|
    %tr
      %td= post.title
      %td= Blog.find_by_id( post.blog_id ).title if post.blog_id != nil
      %td= truncate( post.link, :length => 100, :omission => "..." )
      %td= post.is_original
      %td= link_to 'Show', post
      %td= link_to 'Edit', edit_post_path(post)
      %td= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete

%br

= render :partial => "shared/cms_index_footer", :locals => { :action => "post" }
