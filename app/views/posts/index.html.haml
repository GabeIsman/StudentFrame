= render :partial => "shared/cms_header", :locals => { :name => "Posts" }

%table
  %tr
    %th Text
    %th Title
    %th User
    %th Category
    %th Slug
    %th
    %th
    %th

  - @posts.each do |post|
    %tr
      %td= post.text
      %td= post.title
      %td= post.user_id
      %td= post.category
      %td= post.slug
      %td= link_to 'Show', post
      %td= link_to 'Edit', edit_post_path(post)
      %td= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete

%br

= render :partial => "shared/cms_index_footer", :locals => { :action => "post" }
