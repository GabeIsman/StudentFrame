= form_for @talk do |f|
  -if @talk.errors.any?
    #error_explanation
      %h2= "#{pluralize(@talk.errors.count, "error")} prohibited this talk from being saved:"
      %ul
        - @talk.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :agenda_id
    = f.number_field :agenda_id
  .actions
    = f.submit 'Save'
