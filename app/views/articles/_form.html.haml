= form_for @article, :html => { :class => "cms-form", :id => "articles-form" } do |f|
  -if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  %table
    %tr.text_field
      %th= f.label :title
      %td= f.text_field :title
    %tr.text_field
      %th= f.label :byline
      %td= f.text_field :byline
    %tr.select
      %th= f.label :agenda
      %td= f.select( "agenda_id", @agendas.map{ |a| [a.title, a.id] }, { :include_blank => true } )
    %tr.text_area
      %th= f.label :text
      %td= f.text_area :text
    %tr.select
      %th= f.label :type
      %td= f.select( "type", [ ["National Feature", 1], ["Campus Feature", 2] ], { :include_blank => true } )
    %tr.submit
      %th
      %td= f.submit 'Save'
