= render :partial => "shared/cms_header", :locals => { :name => "Articles" }

%table
  %tr
    %th Title
    %th Byline
    %th Kind
    %th Agenda
    %th
    %th
    %th

  - @articles.each do |article|
    %tr
      %td= article.title if article.title
      %td= article.byline if article.byline
      %td= article.kind if article.kind
      %td= article.agenda.title if article.agenda
      %td= link_to 'Show', article
      %td= link_to 'Edit', edit_article_path(article)
      %td= link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete